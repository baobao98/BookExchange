@model List<Sach>

@{
    ViewData["Title"] = "Post Manager";
}

<!--fontawsome-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

<div class="page-shop-sidebar left--sidebar bg--white section-padding--lg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-12 order-1 order-lg-2">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shop__list__wrapper d-flex flex-wrap flex-md-nowrap justify-content-between">
                            <div class="orderby__wrapper" style="padding-left: 70%; display: inherit">
                                <a asp-action="CreatePost" asp-controller="Post">Tạo bài đăng</a>
                                <select class="shot__byselect">
                                    <option>Đã đăng</option>
                                    <option>Đã ẩn</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab__container">
                    <div class="shop-grid tab-pane fade show active" id="nav-grid" role="tabpanel">
                        <div class="row">
                            @{
                                string urlImageFirst = "";
                                foreach (var item in Model)
                                {
                                    urlImageFirst = "../images/img-post/" + item.AnhSach.First().ImgUrl;
                                    <!-- Start Single Product -->
                                    <div class="product product__style--3 col-lg-3 col-md-3 col-sm-4 col-12">
                                        <div class="product__thumb">
                                            <a class="first__img" asp-action="Detail" asp-controller="Post" asp-route-id="@item.MaSach"><img src="@urlImageFirst" alt="product image"></a>
                                            <a class="second__img animation1" asp-action="Detail" asp-controller="Post" asp-route-id="@item.MaSach"><img src="@urlImageFirst" alt="product image"></a>
                                            <div class="hot__box">
                                                <span class="hot-label">@item.MaTtNavigation.TenTt</span>
                                            </div>
                                        </div>
                                        <div class="product__content content--center">
                                            <h4><a asp-action="Detail" asp-controller="Post" asp-route-id="@item.MaSach">@item.TenSach</a></h4>
                                            @if (item.Gia != null)
                                            {
                                                <ul class="prize d-flex">
                                                    <li>@string.Format("{0:0,0 VND}", item.Gia)</li>
                                                </ul>
                                            }
                                            <div class="action">
                                                <div class="actions_inner">
                                                    <ul class="add_to_links">
                                                        <li><a class="cart" asp-action="Edit" asp-controller="Post" asp-route-id="@item.MaSach"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a></li>
                                                        <li><a class="wishlist" asp-action="Delete" asp-controller="Post" asp-route-id="@item.MaSach"><i class="fa fa-trash" aria-hidden="true"></i></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Single Product -->
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
